{! This component can accept an option content flag !}

<section{~s}
  {?data.content-flag}
    id="content"
  {/data.content-flag}
  {#data.display}
    {>"components__{.name}" data=data /}
  {/data.display}
>
  <div class="container">
    {#data.components}
        {>"components__{.name}" name=name data=data/}
    {/data.components}
  </div>
</section>
